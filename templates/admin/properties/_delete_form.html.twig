<form method="post" action="{{ path('properties_delete', {'id': property.id}) }}" onsubmit="return confirm('Voulez-vous supprimer cette propriété ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ property.id) }}">
    <button class="btn btn-danger"><i class="btn-label fas fa-trash" title="Supprimer" style="font-size: 16px;"></i></button>
</form>
