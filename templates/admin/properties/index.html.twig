{% extends 'admin/base.html.twig' %}

{% block title %}Propriétés{% endblock %}

{% block body %}
<div class="page-header">
    <div class="page-title">Propriétés</div>
    <ul class="breadcrumbs">
        <li class="nav-home">
            <a href="{{ path('dashboard') }}">
                <i class="flaticon-home"></i>
            </a>
        </li>
        <li class="separator">
            <i class="flaticon-right-arrow"></i>
        </li>
        <li class="nav-item">
            Catalogue
        </li>
        <li class="separator">
            <i class="flaticon-right-arrow"></i>
        </li>
        <li class="nav-item">
            Propriétés
        </li>
    </ul>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="card-head-row">
                    <h4 class="card-title">Liste des propriétés</h4>
                    <div class="card-tools">
                        <a href="{{ path('properties_new') }}" class="btn btn-info font-weight-bold"><span class="btn-label"><i class="flaticon-plus"></i></span> Ajouter une propriété</a>
                        {%  if properties|length > 0 %}
                        &nbsp;&nbsp;
                        <a href="{{ path('properties_values_new', {'property': firstProperty.id}) }}" class="btn btn-outline-info border border-info font-weight-bold"><span class="btn-label"><i class="flaticon-plus"></i></span> Ajouter une valeur</a>
                        {% endif %}
                    </div>
                </div>
            </div>
            <div class="card-body">
                <table class="display table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nom</th>
                            <th class="text-center">&nbsp;</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for property in properties %}
                        <tr>
                            <td>{{ property.id }}</td>
                            <td>{{ property.name }}</td>
                            <td class="text-right">
                                <div class="d-inline-flex text-left" style="max-width: 305px;">
                                    <div class="p-1">
                                        <a href="{{ path('properties_values_index', {'property': property.id}) }}" class="btn btn-primary" title="Afficher les valeurs">Afficher valeurs associées</a>
                                    </div>
                                    <div class="p-1">
                                        <a href="{{ path('properties_edit', {'id': property.id}) }}" class="btn btn-primary" title="Éditer"><i class="btn-label fas fa-pen" style="font-size: 16px;"></i></a>
                                    </div>
                                    <div class="p-1">{{ include('admin/properties/_delete_form.html.twig') }}</div>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3">Aucune propriété de créée.</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>                
            </div>
        </div>
    </div>
</div>
{% endblock %}
