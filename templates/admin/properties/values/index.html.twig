{% extends 'admin/base.html.twig' %}

{% block title %}Valeurs de propriété{% endblock %}

{% block body %}
<div class="page-header">
    <div class="page-title">Propriétés</div>
    <ul class="breadcrumbs">
        <li class="nav-home">
            <a href="{{ path('dashboard') }}">
                <i class="flaticon-home"></i>
            </a>
        </li>
        <li class="separator">
            <i class="flaticon-right-arrow"></i>
        </li>
        <li class="nav-item">
            Catalogue
        </li>
        <li class="separator">
            <i class="flaticon-right-arrow"></i>
        </li>
        <li class="nav-item">
            <a href="{{ path('properties_index') }}">
                Propriétés
            </a>
        </li>
    </ul>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="card-head-row">
                    <h4 class="card-title">Liste des valeurs pour <b>{{ name_property }}</b></h4>
                    <div class="card-tools">
                        <a href="{{ path('properties_values_new', {'property': property}) }}" class="btn btn-info font-weight-bold"><span class="btn-label"><i class="flaticon-plus"></i></span> Ajouter une valeur</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <table class="display table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Valeur</th>
                            <th class="text-center">&nbsp;</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for properties_value in properties_values %}
                        <tr>
                            <td>{{ properties_value.id }}</td>
                            <td>{{ properties_value.value }}</td>
                            <td class="text-right">
                                <div class="d-inline-flex text-left" style="max-width: 200px;">
                                    <div class="p-1">
                                        <a href="{{ path('properties_values_edit', {'id': properties_value.id}) }}" class="btn btn-primary" title="Éditer"><i class="btn-label fas fa-pen" style="font-size: 16px;"></i></a>
                                    </div>
                                    <div class="p-1">{{ include('admin/properties/values/_delete_form.html.twig') }}</div>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>                
            </div>
        </div>
    </div>
</div>



{% endblock %}
