{% extends 'admin/base.html.twig' %}
{% block title %}ModifierAjouter une propriété{% endblock %}
{% form_theme form _self %}

{% block stylesheets %}
<style type="text/css">
	fieldset {
		padding: 0 !important;
	}
</style>
{% endblock %}
{% block body %}
<div class="page-header">
	<h4 class="page-title">Gestion des propriétés</h4>
    <ul class="breadcrumbs">
        <li class="nav-home">
            <a href="{{ path('dashboard') }}">
                <i class="flaticon-home"></i>
            </a>
        </li>
        <li class="separator">
            <i class="flaticon-right-arrow"></i>
        </li>
        <li class="nav-item">
            Catalogue
        </li>
        <li class="separator">
            <i class="flaticon-right-arrow"></i>
        </li>
        <li class="nav-item">
            <a href="{{ path('properties_index') }}">
	            Propriétés
	        </a>
        </li>
        <li class="separator">
            <i class="flaticon-right-arrow"></i>
        </li>
        <li class="nav-item">
            Modifier une propriété
        </li>
    </ul>
</div>
<div class="row">
	<div class="col-md-12">
		<div class="card">
			<div class="card-header">
				<div class="card-head-row">
					<h4 class="card-title">Modifier une propriété</h4>
                    <div class="card-tools">
                        <a href="{{ path('properties_new') }}" class="btn btn-info font-weight-bold"><span class="btn-label"><i class="flaticon-plus"></i></span> Ajouter une propriété</a>
                    </div>
				</div>
			</div>
			<div class="card-body">
				{{ include('admin/properties/_form.html.twig', {'button_label': 'Modifier'}) }}
			</div>
		</div>
	</div>
</div>
{% endblock %}