<form method="post" action="{{ path('parameters_address_delete', {'id': address.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer cette adresse ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ address.id) }}">
    <button class="btn btn-danger"><i class="btn-label fas fa-trash" title="Supprimer" style="font-size: 16px;"></i></button>
</form>
