{% extends 'admin/base.html.twig' %}
{% block title %}Paramètres générales{% endblock %}
{% form_theme form _self %}

{% block stylesheets %}
	<style type="text/css">
		fieldset {
			padding: 0 !important;
		}

	</style>
{% endblock %}

{% block body %}
<div class="page-header">
	<h4 class="page-title">Paramètres générales</h4>
	<ul class="breadcrumbs">
		<li class="nav-home">
			<a href="{{ path('dashboard') }}">
				<i class="flaticon-home"></i>
			</a>
		</li>
		<li class="separator">
			<i class="flaticon-right-arrow"></i>
		</li>
		<li class="nav-item">
			<a href="{{ path('parameters_index') }}">Paramètres</a>
		</li>
		<li class="separator">
			<i class="flaticon-right-arrow"></i>
		</li>
		<li class="nav-item">
			<a href="{{ path('parameters_adresses') }}">Adresses</a>
		</li>
		<li class="separator">
			<i class="flaticon-right-arrow"></i>
		</li>
		<li class="nav-item">
			Modifier une adresse
		</li>
	</ul>
</div>
<div class="row">
	<div class="col-md-12">
		<div class="card">
			<div class="card-header">
				<div class="card-head-row">
					<h4 class="card-title">Modifier une adresse</h4>
					<div class="card-tools">
						<a href="{{ path('parameters_address_new') }}" class="btn btn-info font-weight-bold"><span class="btn-label"><i class="flaticon-plus"></i></span> Ajouter une adresse</a>
					</div>
				</div>
			</div>
			<div class="card-body">
				{{ include('admin/parameters/addresses/_form.html.twig', {'button_label': 'Enregistrer'}) }}
			</div>
		</div>
	</div>
</div>
{% endblock %}
