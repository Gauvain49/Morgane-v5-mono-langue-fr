<form method="post" action="{{ path('taxes_delete', {'id': tax.id}) }}" onsubmit="return confirm('Voulez-vous supprimer cette taxe ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tax.id) }}">
    <button class="btn btn-danger" style="padding-left: 19px; padding-right: 19px;"><i class="btn-label fas fa-trash" title="Supprimer"></i></button>
</form>
