{% extends 'base.html.twig' %}

{% block title %}MgPosts index{% endblock %}

{% block body %}
    <h1>MgPosts index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for mg_post in mg_posts %}
            <tr>
                <td>{{ mg_post.id }}</td>
                <td>{{ mg_post.title }}</td>
                <td>
                    <a href="{{ path('mg_posts_show', {'id': mg_post.id}) }}">show</a>
                    <a href="{{ path('mg_posts_edit', {'id': mg_post.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('mg_posts_new') }}">Create new</a>
{% endblock %}
